@{
    ViewData["Title"] = "Se connecter";
}
@model ClientUser
<h2>@ViewData["Title"]</h2>

<div class="row">
    <div class="col-sm-8">
        <form asp-action="Login" asp-controller="Login" class="form-horizontal">
            <fieldset>
                <legend>@ViewData["Message"]</legend>
                <div class="form-group required">
                    @Html.LabelFor(model => model.Username, "Utilisateur", 
                    new { @class = "col-lg-2 control-label" })
                    <div class="col-lg-10">
                        @Html.EditorFor(model => model.Username, 
                        new { htmlAttributes = new { @class = "form-control",
                           required = "required", placeholder = "Utilisateur",
                           oninvalid= "setCustomValidity('Ce champ est obligatoire')",
                           oninput = "setCustomValidity('')"} })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.ClientId, "ID Client", 
                    new { @class = "col-lg-2 control-label" })
                    <div class="col-lg-10">
                        @Html.EditorFor(model => model.ClientId, 
                        new { htmlAttributes = new { @class = "form-control",
                            required = "required", placeholder = "ID Client", type="text",
                            oninvalid = "setCustomValidity('Ce champ est obligatoire')",
                            oninput = "setCustomValidity('')"} })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.Password, "Mot de passe", 
                    new { @class = "col-lg-2 control-label" })
                    <div class="col-lg-10">
                        @Html.EditorFor(model => model.Password, 
                        new { htmlAttributes = new { @class = "form-control",
                           required = "required", placeholder = "Mot de passe", type="password",
                           oninvalid = "setCustomValidity('Ce champ est obligatoire')",
                           oninput = "setCustomValidity('')"} })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-lg-10 col-lg-offset-2">
                        <button type="submit" class="btn btn-primary">Se connecter</button>
                    </div>
                </div>
            </fieldset>
        </form>
    </div>
</div>
