@using BTPBCommon.Clients;
@{

    ViewData["Title"] = "Account";
    ClientUser user = SessionUtils.FromJson(Context.Session);
}
<h2>@ViewData["Message"]</h2>
<h3>Vous êtes : @user.UserType</h3>
<div class="row">
    <div class="col-sm-3">
        <h4>Projets</h4>
        <ul class="list-group">
            @{
                if (user.UserType.Equals("ADMIN"))
                {
                    <li class="list-group-item">
                        <span class="badge">0</span>
                        Users
                    </li>
                }
            }
            <li class="list-group-item">
                <span class="badge">0</span>
                Projects
            </li>
        </ul>
    </div>
</div>


